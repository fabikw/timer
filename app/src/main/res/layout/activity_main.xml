<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_weight="0.5">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/fragment"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="50sp"
                android:layout_height="50sp"
                app:srcCompat="@drawable/timer1"
                android:id="@+id/imageButton1"
                android:onClick="createTimer_1"
                android:scaleType="fitCenter"
                android:padding="5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timer_1"
                android:textSize="35sp"
                android:baselineAligned="true"
                android:fontFamily="sans-serif" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="50sp"
                android:layout_height="50sp"
                app:srcCompat="@drawable/timer5"
                android:id="@+id/imageButton5"
                android:onClick="createTimer_5"
                android:scaleType="fitCenter"
                android:padding="5sp"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timer_5"
                android:textSize="35sp"
                android:baselineAligned="true"
                android:fontFamily="sans-serif" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="50sp"
                app:srcCompat="@drawable/timer10"
                android:id="@+id/imageButton"
                android:onClick="createTimer_10"
                android:adjustViewBounds="true"
                android:visibility="visible"
                android:layout_height="50sp"
                android:scaleType="fitCenter"
                android:padding="5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timer_10"
                android:textSize="35sp"
                android:baselineAligned="true"
                android:fontFamily="sans-serif" />

        </TableRow>


    </TableLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chronoText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:typeface="serif"
        android:textSize="80sp" />

</LinearLayout>
