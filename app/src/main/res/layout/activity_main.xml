<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_weight="0.5">


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:onClick="createTimer_5"
                android:padding="5sp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/timer5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:fontFamily="sans-serif"
                android:text="@string/timer_5"
                android:textSize="35sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:onClick="createTimer_8"
                android:padding="5sp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/timer8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:fontFamily="sans-serif"
                android:text="@string/timer_8"
                android:textSize="35sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:adjustViewBounds="true"
                android:onClick="createTimer_10"
                android:padding="5sp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/timer10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:fontFamily="sans-serif"
                android:text="@string/timer_10"
                android:textSize="35sp" />

        </TableRow>


    </TableLayout>


    <TextView
        android:id="@+id/chronoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="80sp"
        android:typeface="serif" />

</LinearLayout>
